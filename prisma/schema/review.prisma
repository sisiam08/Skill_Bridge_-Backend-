model Reviews {
    id        String   @id @default(uuid())
    bookingId String   @unique
    studenId  String
    tutorId   String
    rating    Int
    comment   String   @db.Text
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    booking Bookings      @relation(fields: [bookingId], references: [id])
    student Users         @relation(fields: [studenId], references: [id], onDelete: Cascade)
    tutor   TutorProfiles @relation(fields: [tutorId], references: [id])

    @@index([bookingId])
    @@map("reviews")
}
